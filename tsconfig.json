{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "typeRoots": ["../node_modules/@types", "./@types"],
    "paths": {
      "*": ["node_modules/*", "./@types/*"]
    }
  },
  "include": ["./**/*"]
}
